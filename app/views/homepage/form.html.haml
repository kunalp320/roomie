- content_for :styles do
  - stylesheet_link_tag 'partials/header', 'form/form', 'partials/footer'
-content_for :javascript do
  - javascript_include_tag 'homepage'
= render partial: "partials/header", locals: {name: @name}
.profile_header Create Your Profile
.form_container
  = form_tag '/map', method: :post do
    .input_components
      .data_point
        .field_text Name:
        %input{class: 'input_field'}
      .data_point
        .field_text School:
        %input{class: 'input_field'}
      .data_point
        .field_text Graduating Year:
        .input_field
          %select{class: 'select_field'}
            %option{class: 'input_field'} Select a Year
            - (2010..2018).each do |year|
              %option{class: 'input_field'} #{year}
      .data_point
        .field_text Job Title:
        %input{class: 'input_field'}
      .data_point
        .field_text New Location:
        %input{class: 'input_field'}
      .data_point
        .field_text Smoking:
        .input_field
          %select{class: 'select_field'}
            %option{class: 'input_field'} Select
            %option{class: 'input_field'} Yes
            %option{class: 'input_field'} No
      .data_point
        .field_text Cleanliness:
        %input{class: 'input_field'}
      .data_point
        .field_text Preferred Roommate:
        .input_field
          %select{class: 'select_field'}
            %option{class: 'input_field'} Select
            %option{class: 'input_field'} Male
            %option{class: 'input_field'} Female
            %option{class: 'input_field'} Doesn't Matter
      .data_point
        .field_text Hobbies:
        %textarea{class: 'hobbies_field'}
      .data_point
        .field_text Vacant Room Available?
        .input_field
          %input{type: 'checkbox', class: 'vacant_room'}
      .data_point
        .field_text{style: 'margin-top: 29px;'} Facebook Link:
        %input{class: 'input_field', style: 'margin-top: 25px;'}
    = submit_tag "Select Locations", class: 'submit_profile'
    %a.cancel_button{href: '/'} Cancel
    
= render partial: 'partials/footer'